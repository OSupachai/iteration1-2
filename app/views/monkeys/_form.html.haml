= form_for @monkey do |f|
  - if @monkey.errors.any?
    #error_explanation
      %h2= "#{pluralize(@monkey.errors.count, "error")} prohibited this monkey from being saved:"
      %ul
        - @monkey.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :text
    = f.text_area :text
  .actions
    = f.submit 'Save'
